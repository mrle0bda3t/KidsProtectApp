<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/purple_700" android:startColor="@color/bl" />
            <corners android:radius="19.5dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/black2" android:startColor="@color/black2" />
            <corners android:radius="19.50dp" />
        </shape>
    </item>
</selector>